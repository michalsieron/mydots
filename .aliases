#!/usr/bin/env sh

alias mydots='git --git-dir=$HOME/mydots --work-tree=$HOME'

# ask to overwrite
alias mv="mv -i"
alias cp="cp -i"

# smart case in less
alias less="less -i"

# ls replacement
LS_COMMAND="ls"

if type lsd > /dev/null 2>&1; then
    LS_COMMAND="lsd"
fi

# shellcheck disable=SC2139 # we do want to expand when defining
alias ls="$LS_COMMAND"
# shellcheck disable=SC2139 # we do want to expand when defining
alias l="$LS_COMMAND"
# shellcheck disable=SC2139 # we do want to expand when defining
alias ll="$LS_COMMAND -l"
# shellcheck disable=SC2139 # we do want to expand when defining
alias la="$LS_COMMAND -lA"

unset LS_COMMAND

# git commands
alias gs="git status --short --branch"
alias gc="git commit"
alias gl="git log --oneline --decorate --graph --all"
alias gri="git rebase --interactive"

# other
if type bat > /dev/null 2>&1; then
    alias man="batman"
fi

alias j="just"
alias venv=". .venv/bin/activate"
alias xclip="xclip -selection clipboard"
alias lspath='echo "$PATH" | tr ":" "\n" | cat -n'

alias tmux_dump="tmux capture-pane -p -S -"
